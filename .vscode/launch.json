{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/web-client"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/backends/packages/msgrpc/examples/nodejs-server/NodeServerTest.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "console": "integratedTerminal",
            "env": {
                "SEQ_LOGGER": "localhost"
            }
        },
        {
            "name": "Test Client",
            "program": "${workspaceFolder}/dist/backends/packages/msgrpc/examples/nodejs-client/NodeClientTest.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal",
            "env": {
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test Server 2",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/examples/nodejs-server/NodeServerTest.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "args": ["3001"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "runtimeArgs": [
                "--experimental-vm-modules",
            ],
              "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
              "--collectCoverage=false",
              "--colors",
              "--config",
              "${workspaceRoot}/jest.config.ts",
              "--runInBand",
              "--testTimeout=10000000"
            ],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart",
            "envFile": "${workspaceRoot}/.env",
            "skipFiles": [
              "${workspaceRoot}/../../node_modules/**/*",
              "<node_internals>/**/*"
            ],
            "windows": {
              "skipFiles": ["C:\\**\\node_modules\\**\\*", "<node_internals>/**/*"]
            },
          }        
    ]
}