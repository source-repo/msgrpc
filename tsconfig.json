{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,

    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src", "./examples"],
  "exclude": ["./dist", "./node_modules"]
}
